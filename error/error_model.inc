class error_model{

	//-----------------------------------------
	//各プロパティ変数宣言
	//-----------------------------------------

	private $error;		//エラーメッセージ
	private $path;		//遷移先制御コマンド
	private $lp;		//リンクパス
	private $title;		//リンク名

	/*====================================================================================
	 *概要：
	 *	error_form
	 *機能説明：
	 *	コンストラクタ
	 *引数：
	 *	なし
	 *戻り値：
	 *	なし
	 *備考：
	 *	作成日)	2015/7/23
	 *	作成者)	水島創太
	 *	説明）
	 *	更新日)
	 *	更新者)
	 *	変更)
	  ====================================================================================
	 */

	function __construct(){

		$this->init();

	}

	/*====================================================================================
	 *概要：
	 *	init
	 *機能説明：
	 *	プロパティ初期化
	 *引数：
	 *	なし
	 *戻り値：
	 *	なし
	 *備考：
	 *	作成日)	2015/7/22
	 *	作成者)	水島創太
	 *	説明）
	 *	更新日)
	 *	更新者)
	 *	変更)
	  ====================================================================================
	 */

 	private function init(){

	$this->error = "";	//エラーメッセージ
	$this->path = "";													//遷移先制御用コマンド
	$this->lp = "";																//リンク先パス
	$this->title = "";															//リンク名
	}

	/*====================================================================================
	 *概要：
	 *	getter関数
	 *機能説明：
	 *	値をフィールド変数から取得
	 *引数：
	 *	なし
	 *戻り値：
	 *	各種格納した値
	 *備考：
	 *	作成日)	2015/7/22
	 *	作成者)	水島創太
	 *	説明）
	 *	更新日)
	 *	更新者)
	 *	変更)
	  ====================================================================================
	 */
		//エラーメッセージ
		public function getError()
		{
			return $this->error;
		}

		//遷移先制御用コマンド
		public function getPath()
		{
			return $this->path;
		}

		//リンク用パス
		public function getLp()
		{
			return $this->lp;
		}

		//リンク名
		public function getTitle()
		{
			return $this->title;
		}

	/*====================================================================================
	 *概要：
	 *	getForm関数
	 *機能説明：
	 *	フォームに入力された値を受け取る
	 *引数：
	 *	フォーム入力された値
	 *戻り値：
	 *	なし
	 *備考：
	 *	作成日)	2015/7/23
	 *	作成者)	水島創太
	 *	説明）
	 *	更新日)
	 *	更新者)
	 *	変更)
	  ====================================================================================
	 */

		//フォーム入力からの数値受け取り関数
		public function getForm(){

			//ISBN番号(GET送信)
			if(isset($_GET["errMsg"]))
			{
				$this->error = $_GET["errMsg"];
			}

			//入力書籍タイトル
			if(isset($_GET["path"]))
			{
				$this->path = $_GET["path"];
			}
		}

	/*====================================================================================
	 *概要：
	 *	processing
	 *機能説明：
	 *	全体の処理判定を行う
	 *引数：
	 *	なし
	 *戻り値：
	 *	なし
	 *備考：
	 *	作成日)	2015/7/22
	 *	作成者)	水島創太
	 *	説明）
	 *	更新日)
	 *	更新者)
	 *	変更)
	  ====================================================================================
	 */

		public function processing()
		{
			//パスの種類に合わせて値を格納する
			if($this->path == "logout")
			{
				//フィールド変数に対応する値を格納

				$this->title = "[ログアウト画面へ戻る]";
				$this->lp = "../logout/logout.php";

			}else if($this->path == "menu"){

				$this->title = "[メニューへ戻る]";
				$this->lp = "../menu/menu.php";

			}else{

				$this->title = "[一覧表示へ戻る]";
				$this->lp = "../list/list.php";

			}
		}
}
?>
